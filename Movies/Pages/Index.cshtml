@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">


    <div class="results">
        <h1>Movies</h1>

        @if (Model.Movies.Count == 0)
        {
            <h2>No Results</h2>
        }
        @foreach (Movie m in Model.Movies)
        {
            <div class="movie-entry">
                <h2>
                    @m.Title
                    @if (m.Release_Year != null)
                    {<span> (@m.Release_Year)</span>}
                </h2>
                @if (m.Major_Genre != null)
                {<div class="genre">@m.Major_Genre</div>}
                @if (m.MPAA_Rating != null)
                {<div class="rating">Rated: @m.MPAA_Rating</div>}
                @if (m.Director != null)
                {<div class="director">Directed by: @m.Director</div>}
                <div class="ratings">
                    @if (m.IMDB_Rating != null)
                    {
                        <div>
                            <span> IMDB:</span>
                            <h3>@m.IMDB_Rating</h3>
                        </div>
                    }
                    @if (m.Rotten_Tomatoes_Rating != null)
                    {
                        <div>
                            <span>Rotten Tomatoes:</span>
                            <h3>@m.Rotten_Tomatoes_Rating</h3>
                        </div>
                    }
                </div>
            </div>
        }
    </div>


    <form method="post" id="search-form">
        <h2>Search</h2>
        <input type="text" id="search" name="search" value="@Model.search" />
        <label>
            <input type="checkbox" class="mpaa" name="mpaa" value="G" checked="@Model.mpaa.Contains("G")" />
            Rated G
        </label>
        <label>
            <input type="checkbox" class="mpaa" name="mpaa" value="PG" checked="@Model.mpaa.Contains("PG")" />
            Rated PG
        </label>
        <label>
            <input type="checkbox" class="mpaa" name="mpaa" value="PG-13" checked="@Model.mpaa.Contains("PG-13")" />
            Rated PG-13
        </label>
        <label>
            <input type="checkbox" class="mpaa" name="mpaa" value="R" checked="@Model.mpaa.Contains("R")" />
            Rated R
        </label>
        <label>
            <input type="checkbox" class="mpaa" name="mpaa" value="NC-17" checked="@Model.mpaa.Contains("NC-17")" />
            Rated NC-17
        </label>

        <label>
            Minimum IMDB Rating:
            <input type="number" id="minIMDB" min="0" max="10" step="0.1" value="@Model.minIMDB" name="minIMDB" />
        </label>

        <input type="submit" value="Search" />
    </form>

</div>

